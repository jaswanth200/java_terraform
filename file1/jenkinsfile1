pipeline {
    agent any
   
    stages {
        stage('Terraform Init') {
            steps {
                dir('file1') {
                    script {
                        sh 'terraform init'
                    }
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir('file1') {
                    script {
                        sh 'terraform apply -auto-approve'
                    }
                }
            }
        }
    }
}
